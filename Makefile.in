# Makefile.in for gimpcpt

# $Id: Makefile.in,v 1.5 2008/04/13 20:57:37 jjg Exp jjg $
# help older versions make

@SET_MAKE@

# Macros

VERSION   = @VERSION@
RUBBISH   = *~
CONFFILES = config.cache config.log config.status configure Makefile

DIST      = gimpcpt-$(VERSION)

# targets

default : all

all : 
	cd src ; $(MAKE) all ; cd ..

install : all
	cd src ; $(MAKE) install ; cd ..

check test show : all
	cd src ; $(MAKE) test ; cd ..

clean :
	$(RM) $(RUBBISH)
	cd src ; $(MAKE) clean ; cd ..

veryclean spotless : clean
	$(RM) $(CONFFILES)
	autoconf
	rm -rf autom4te.cache
	cd src ; $(MAKE) veryclean ; cd ..

dist : veryclean
	cd .. ; tar --exclude=RCS -zcvf gimpcpt.tar.gz gimpcpt ; cd gimpcpt

maint-dist : clean
	cd .. ; tar -zcvf $(VERSION)-maintain.tar.gz gimpcpt ; cd gimpcpt



